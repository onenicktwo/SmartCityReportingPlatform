<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">


        <TextView
            android:id="@+id/tvStatusStatsTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Status Statistics"
            android:textStyle="bold"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tvStatusStats"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp" />

        <TextView
            android:id="@+id/tvWorkloadTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Official Workload"
            android:textStyle="bold"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tvOfficialWorkload"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp" />

        <TextView
            android:id="@+id/tvLocationStatsTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Location Statistics"
            android:textStyle="bold"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tvLocationStats"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp" />

        <TextView
            android:id="@+id/tvResponseTimeTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Response Time Statistics"
            android:textStyle="bold"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tvResponseTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp" />


    </LinearLayout>
</ScrollView>