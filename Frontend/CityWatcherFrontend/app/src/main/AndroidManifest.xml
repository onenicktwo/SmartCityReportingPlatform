<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:allowClearUserData="true"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="CityWatcherFrontend"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.CityWatcherFrontend"
        android:usesCleartextTraffic="true"
        tools:targetApi="31">
        <activity
            android:name=".ReportCommentActivity"
            android:exported="false"
            android:label="@string/title_activity_report_comment"
            android:theme="@style/Theme.CityWatcherFrontend" />
        <activity
            android:name=".IssueDetailsActivity"
            android:exported="false" />
        <activity
            android:name=".UpdateIssueActivity"
            android:exported="false" />
        <activity
            android:name=".ViewIssuesActivity"
            android:exported="false" />
        <activity
            android:name=".LoginOrReg"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".RegisterActivity">
        </activity>
        <activity android:name=".LoginActivity">
        </activity>
        <activity android:name=".MainActivity"></activity>
        <activity android:name=".AdminViewActivity"></activity>
        <activity android:name=".EditUserActivity"></activity>
        <activity android:name=".DeleteUserActivity"></activity>
        <activity android:name=".EditCommentActivity"></activity>
        <activity android:name=".CityOfficalAdminChatroom"></activity>
        <activity android:name=".ChatStartActivity"></activity>
        <activity android:name=".VolunteerApplyActivity"></activity>
        <activity android:name=".CitizenViewActivity"></activity>
        <activity android:name=".ViewProfileActivity"></activity>
        <activity
            android:name=".CityWatcherActivity"
            android:exported="false" />
        <activity
            android:name=".CreateIssueActivity"
            android:exported="false" />

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="${MAPS_KEY}" />
    </application>


</manifest>